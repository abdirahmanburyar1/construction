# Required: PostgreSQL connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require"

# Platform domain (dhisme.so in prod, localhost:3000 in dev)
PLATFORM_DOMAIN=dhisme.so

# Platform admin (used by seed, optional if no platform UI)
ADMIN_EMAIL=admin@platform.com
ADMIN_PASSWORD=changeme

# Default tenant: albayaan.dhisme.so (used by seed)
ALBAYAAN_USER_EMAIL=admin@albayaan.dhisme.so
ALBAYAAN_USER_PASSWORD=changeme

# ImageKit (tenant logo/favicon uploads)
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_PRIVATE_KEY=your_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id
